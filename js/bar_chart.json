{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 450,
  "title": { "text": "Educational Attainment by State in 2019" },
  "data": {
    "url": "data/educational_attainment_state_2019.csv"
  },
  "mark": "bar",
  "selection": {
    "stateSelection": {
      "type": "multi",
      "fields": ["state"],
      "bind": "legend"
    }
  },
  "encoding": {
    "x": { "field": "rate", "type": "quantitative" },
    "y": { "field": "state", "type": "nominal" },
    "color": {
      "field": "state",
      "type": "nominal",
      "legend": { "title": "Select State" }
    },
    "opacity": {
      "condition": { "selection": "stateSelection", "value": 1 },
      "value": 0.2
    }
  }
}
